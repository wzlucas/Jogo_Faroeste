		escreva("Deseja aceitar a missão e tentar outra luta com Louco Clay?\n")
		u.aguarde(time)
		enquanto(opcao1!=1 e opcao1!=2)
		{
			escreva("1 - Aceitar\n")
			escreva("2 - Recusar\n")
			escreva("--------------------------\n")
			escreva("Escolha uma opção: ")
			
