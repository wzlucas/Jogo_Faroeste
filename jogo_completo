	funcao Luta_Louco_Clay()
	{
		// Inicialização das variáveis do duelo
		inteiro taxa_dano_clay_max=50
		inteiro taxa_dano_clay_min=20
		
		inteiro vidaLoucoClay = 100
		inteiro balasMortimer = 6
		
		limpa()
		escreva("\n------------------------------\n")
		escreva("\nLouco Clay está diante de você, encarando-o com um olhar calmo.")
		u.aguarde(time)
		escreva("\nO silêncio é quebrado pelo vento e pelo som distante de uma carruagem.")
		u.aguarde(time)
		escreva("\nVocê pode sentir a tensão no ar enquanto engatilha sua arma e fixa seu olhar no adversário.")
		u.aguarde(time)
		escreva("\nA vida de Mortimer Grover depende deste momento decisivo.\n")
		u.aguarde(time)
		escreva("\nEnter...")
		leia(Enter)
		limpa()
		
		enquanto (vidaLoucoClay>=0)
		{
			// Mostra informações da luta
			
			escreva("\n---- Luta com Louco Clay ----\n")
			escreva("Sua vida: ", vida)
			escreva("\nVida de Louco Clay: ", vidaLoucoClay)
			escreva("\nBalas restantes: ", balasMortimer)
			escreva("\n-----------------------------\n")
			
			inteiro acao 
			
			
			
			escreva("Escolha sua ação:\n")
			escreva("1 - Atirar\n")
			escreva("2 - Recarregar\n")
			escreva("3 - Desviar\n")
			escreva("-----------------------------\n")
			escreva("Escolha uma opção: ")
			leia(acao)
			limpa()
			
			escolha (acao)
			{
				caso 1:
				// Código para o jogador atirar em Louco Clay
				
				balasMortimer = balasMortimer - 1
				dano = u.sorteia(taxa_dano_mortimer_min, taxa_dano_mortimer_max)
				vidaLoucoClay = vidaLoucoClay - dano
				escreva("\nVocê atirou em Louco Clay e causou ", dano, " de dano!")
				u.aguarde(time)
				pare
				
				caso 2:
				// Código para recarregar a arma
				
				balasMortimer = 6
				escreva("\nVocê recarregou sua arma.")
				u.aguarde(time)
				pare
				
				caso 3:
				// Código para tentar desviar dos ataques de Louco Clay
				
				escreva("\nVocê tentou desviar das balas de Louco Clay, mas desta vez foi baleado.")
				u.aguarde(time)
				pare
			}
			
			// Ação de Louco Clay
			danoLoucoClay = u.sorteia(taxa_dano_clay_min, taxa_dano_clay_max)
			vida = vida - danoLoucoClay
			escreva("\nLouco Clay atirou em você e causou ", danoLoucoClay, " de dano!")
			escreva("\n------------------------------\n")
			u.aguarde(time)
			
			// Verifica se o jogador ou Louco Clay foi derrotado
			se (vida <= 0)
			{
				limpa()
				escreva("\nVocê levou um tiro certeiro em seu peito.") 
				u.aguarde(10*time)
				limpa()
				escreva("\nVocê Morreu!")
				u.aguarde(20*time)
				limpa()
				missaoSecreta()
				
			}
			senao se (vidaLoucoClay <= 0)
			{
				se( missaoAceita==1)
				{				
					escreva("\nVocê derrotou Louco Clay! Parabéns, Mortimer Grover!")
					
					// Aqui você pode implementar ações para o fim do jogo
				}
				senao
				{
					escreva("\nVocê derrotou Louco Clay! Parabéns, Mortimer Grover!")	
				}
			}
		}
	}funcao morte_personagem()
