	funcao inicio()
	{
		inteiro opcao = 0
		inteiro start = 0
		
		
		limpa()
		enquanto(opcao!=1 e opcao!=2 e opcao!=3)
		{
			limpa()
			escreva("\n----- Tela de Início -----\n")
			escreva("1 - Iniciar\n")
			escreva("2 - Créditos\n")
			escreva("3 - Sair\n")
			escreva("--------------------------\n")
			escreva("Escolha uma opção: ")
			leia(opcao)
			
			
			escolha(opcao)
			 
			{
				caso 3:
					
					escreva("\nSaindo do programa...\n")
				pare
				caso 2:
				creditos()
		    
				pare
				caso 1:
					
					escreva("\nIniciando o jogo...\n")
					cenaSalao()
				pare
				caso contrario:
				limpa()
				escreva("Opção invalida!")
			}
		}
		
	}

