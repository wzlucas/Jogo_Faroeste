	funcao habilidades()
	{
		escreva("------------------------------\n")
		cadeia observacao1
		cadeia observacao2
		cadeia observacao3
		opcao1=0
			cadeia um="1 - Olhos de Aguia"
			cadeia dois="2 - Olhos da Morte"
			cadeia tres="3 - Nunca ficar bebado"
			cadeia quatro="4 - Sorte infinita"
			enquanto(opcao1!=1 e opcao1!=2 e opcao1!=3 e opcao1!=4)
		{
			sorte=u.sorteia(0, 100)
			escreva("\nMortimer Decide ficar na pequena e pacata cidade de Valentyne ")
			escreva("\n----- Tela de Escolha -----")
			escreva("\n",um)
			escreva("\n",dois)
			escreva("\n",tres)
			escreva("\n",quatro)
			escreva("\n---------------------------\n")
			escreva("Escolha uma opção: ")
			leia(opcao1)
			limpa()
			escolha(opcao1)
			{
				
				caso 1:
					um=""
					se(sorte>=70)
					{
						verifica++
					habilidade="Olhos de Aguia"
					escreva("\nParabens, você adquiriu a habilidade Olhos de Aguia.")
					}
					senao
					{
					escreva("você falhou em adquirir a habilidade.")
					}
				pare
				caso 2:
					dois=""
					se(sorte>=70)
					{
						verifica++
					habilidade="Olhos da Morte"
					escreva("\nParabens, você adquiriu a habilidade Olhos da Morte.")
					}
					senao
					{
					escreva("você falhou em adquirir a habilidade.")
					}
				pare
				caso 3:
					tres=""
					se(sorte>=70)
					{
						verifica++
					habilidade=" Nunca ficar bebado"
					escreva("\nParabens, você adquiriu a habilidade  Nunca ficar bebado.")
					}
					senao
					{
					escreva("você falhou em adquirir a habilidade.")
					}
				pare
				caso 4:
					quatro=""
					se(sorte>=70)
					{
						verifica++
					habilidade=" Sorte infinita"
					escreva("\nParabens, você adquiriu a habilidade  Sorte infinita.")
					}
					senao
					{
					escreva("você falhou em adquirir a habilidade.")
					}
				pare
				caso contrario:
				escreva("Opção invalida!")
				pare
				
			}
			se(verifica==1)
			{
				escreva("Você tem uma otima habilidade, tente usala em alguma coisa no saloon.")
			}
			senao
