	funcao Ir_Para_Tombstone()
	{

          limpa()
		escreva("\n------------------------------\n")
		escreva("\nEnquanto Mortimer cavalgava pelas trilhas empoeiradas, as montanhas imponentes cercavam-no,")
		u.aguarde(time)
		escreva("\nsuas formas recortadas contra o horizonte infinito.")
		u.aguarde(time)
		escreva("\nA solidão do deserto ecoava em seus ouvidos,")
		u.aguarde(time)
		escreva("\npontuada apenas pelo sussurro suave do vento entre os cactos altos e retorcidos.")
		u.aguarde(time)
		escreva("\nA jornada era árdua, mas Mortimer estava disposto a enfrentar todos os obstáculos em seu caminho,")
		u.aguarde(time)
		escreva("\npois sabia que seu destino estava além dessas montanhas.\n")
		u.aguarde(time)
		escreva("\nEnter...")
		leia(Enter)
		limpa()
		u.aguarde(time)
		escreva("\nÀ medida que se aproximava de Tombstone, a agitação e a animação tomavam conta da paisagem.")
		u.aguarde(time)
		escreva("\nO som dos cascos dos cavalos e das carruagens enchia o ar,")
		escreva("\nenquanto conversas animadas ecoavam pelas ruas.")
		u.aguarde(time)
		escreva("\nO cheiro de fumaça, poeira e suor impregnava o ambiente,")
		escreva("\nrevelando a vida caótica e vibrante da cidade fronteiriça.")
		u.aguarde(time)
		escreva("\n------------------------------\n")

		emboscada()
	}

	funcao emboscada()
     {
	    inteiro balas_e = 6
	    inteiro bandidosRestantes = 4

	    limpa()
	    escreva("\n------------------------------\n")
	    escreva("\nDe repente,")
	    escreva("tiros ecoaram no ar e a violência explodiu ao redor de Mortimer.\n")
	    u.aguarde(time)
	    escreva("Mortimer foi pego em uma emboscada por bandidos sedentos por dininheiro.\n")
	    u.aguarde(time)
	    escreva("Os tiros zuniam por todos os lados enquanto Mortimer se abaixava, desviando")
	    escreva("das balas com agilidade.Mortimer avista uma rocha que poderá usar para se proteger.\n")
	    u.aguarde(time)
	    escreva("Você terá que confrontar os bandidos, se quiser sair dessa sem perder todo seu dinheiro.\n")
	    u.aguarde(time)
	    escreva("\nEnter...")
	    leia(Enter)
	    limpa()
	    escreva("\n------------------------------\n")
	    u.aguarde(time)
	    escreva("\n4 Bandidos, 6 balas. \n")
	    u.aguarde(time)
	    escreva("Você está em uma situação complicada.\n")
	    escreva("Você não pode desperdiçar balas.\n")
	    escreva("\nEnter...")
	    leia(Enter)
	    limpa()
	       
	    para(inteiro i = 0; i < balas_e; i++)
	    {
	        inteiro tempo = u.sorteia(1, 2)
	        inteiro resp
	   
	        
	        escreva("\n------ Tela De Escolha -------\n")
	        escreva("1 - Atirar na direita.\n")
	        escreva("2 - Atirar na esquerda.\n")
	        escreva("------------------------------\n")
	        escreva("Atirar: ")
	        leia(resp)
	        limpa()
	
	        se(resp == tempo)
	        {
	            bandidosRestantes = bandidosRestantes - 1
	            escreva("\nVocê acertou!\n")
	            balas_e = balas_e - 1

	        pare
	        }
	        senao
	        {
	            escreva("\nVocê errou!\n")
	            balas_e = balas_e - 1

	        pare    
	        }
	        
	    }
	    u.aguarde(3 * time)
	
	    se (bandidosRestantes == 0)
	    {
	    	
			   inteiro opcao = 0 

			   
		        escreva("\nEnter...")
		        leia(Enter)
		        limpa()
		        escreva("\n------------------------------\n")
		        escreva("Mortimer conseguiu matar todos os bandidos da emboscada.\n")
		        u.aguarde(time)
		        escreva("Você pode saquear os corpos ou não.\n")
		        u.aguarde(time)
			   escreva("\nEnter...")
		        leia(Enter)
		        
          enquanto(bandidosRestantes == 0)
          {
          	
      
            enquanto(opcao!=1 e opcao!=2 )
		  {
                  limpa()
                  escreva("\n----- Tela de Escolha -------\n")
	             escreva("1 - saquear corpos\n")
	             escreva("2 - ignorar corpos\n")
		        escreva("------------------------------\n")
		        escreva("Escolha uma opção: ")
			   leia(opcao)
			   
		     escolha(opcao)
		     {   
		     	
			   caso 1:
			   
			        escreva("\nComo recompensa, Mortimer encontra uma bolsa com dinheiro escondida em um dos corpos.\n")
			        u.aguarde(time)
			        escreva("Recolhe o dinheiro e continua sua jornada.\n")
			        u.aguarde(time)
			        escreva("\nVocê coletou 50 dólores")
			        
			        dolares = dolares + 50  // Adiciona 50 dólares ao dinheiro de Mortimer
			        
			   pare
				    
			   caso 2:
			   
                       escreva("Você Ignorou os corpos\n")
                       
			   pare
		     }
	       }
	     }
	    }
	    senao
	    {
	        escreva("\nEnter...")
	        leia(Enter)
	        limpa()
	        escreva("\n------------------------------\n")
	        escreva("Mortimer, sem munição, percebe que ainda restam bandidos vivos na emboscada.\n")
	        u.aguarde(time)
	        escreva("Você não tem escolha, terá de deixar que levem seu dinheiro.\n")
	        u.aguarde(time)
	
	        inteiro dolaresPerdidos = bandidosRestantes * 10
	        dolares = dolares - dolaresPerdidos
	
	        escreva("Restaram ", bandidosRestantes, " bandidos, eles levaram ", dolaresPerdidos, " dolares.\n")
	        u.aguarde(time)
	        escreva("Você perdeu dinheiro.\n")
	        u.aguarde(time)
	        escreva("Essa derrota afetou o ego de Mortimer, mas continuou na sua caçada de Louco Clay\n")
	        u.aguarde(time)

         }
         
             escreva("Você segue seu caminho até que, finalmente, chega em Tombstone.\n")
	        u.aguarde(time)
	        escreva("\nEnter...")
	        leia(Enter)
	        
	        Chegada_Tombstone()
     }

