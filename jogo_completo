	funcao estrangulaMicah()
{
    inteiro vidaMortimer = 999999999
    inteiro vidaMicah = 100
    
    
    	enquanto( vidaMicah >= 0)
    	{

        inteiro opcao

    		
        
        escreva("\n----- Luta com Micah Bell -----")
        escreva("\nSua vida: ", vidaMortimer)
        escreva("\nVida de Micah: ", vidaMicah)
        escreva("\n-------------------------------\n")

        // Opções para o jogador
        escreva("Escolha sua ação:")
        escreva("\n1 - Estrangular Micah")
        escreva("\n2 - Defender-se")
        escreva("\n-------------------------------\n")
        escreva("Escolha uma opção: ")
        leia(opcao)
        limpa()

        escolha(opcao)
        {
            caso 1:
                // Chance de acerto e dano ao estrangular
                inteiro chanceAcerto = u.sorteia(1, 100)
                
                se (chanceAcerto <= 70)  // 70% de chance de acerto
                {
                    inteiro dano_ = u.sorteia(20, 40)
                    escreva("\nVocê acertou Micah, causando ", dano_, " de dano!")
                    vidaMicah = vidaMicah - dano_
                }
                senao
                {
                    escreva("\nVocê errou o estrangulamento!")
                }
                pare
                
            caso 2:
                // Micah ataca Mortimer
                inteiro danoMicah = u.sorteia(10, 30)
                escreva("\nMicah ataca você, causando ", danoMicah, " de dano!")
                vidaMortimer = vidaMortimer - danoMicah
                pare
                
            caso contrario:
                escreva("\nOpção inválida! Escolha 1 ou 2.")
        }
      
        u.aguarde(time)
    }

    // Verificar o resultado do confronto
   se (vidaMicah <= 0)
    {
        escreva("\nVocê matau o último nome da lista, Micah Bell. ")
        final_jogo()
    }
}
	
     funcao final_jogo()
     {

	    escreva("\nA luta é intensa, mas Mortimer prevalece sobre o pistoleiro temido.\n")
	    u.aguarde(time)
	    escreva("\nCom Micah morto aos seus pés, Mortimer acredita que finalmente está livre da")
	    escreva("\nmatança e do vínculo com o Homem Estranho.\n")
	    u.aguarde(time)
	    escreva("\nNo entanto, sua sensação de triunfo é quebrada quando o Homem Estranho aparece diante")
	    escreva("\ndele.\n")
	    u.aguarde(time)
	    escreva("\n--------------------------------------------------------------")
	    escreva("\n\nEnter...")
	    leia(Enter)
	    limpa()
	    escreva("\n--------------------------------------------------------------")
	    escreva("Após estrangular Micah Bell até a morte, Mortimer acredita que finalmente")
	    escreva("estaria livre da matança e do vínculo com o Homem Estranho.\n")
	    u.aguarde(time)
	    
	    escreva("\nNo entanto, sua sensação de triunfo é quebrada quando uma figura misteriosa")
	    escreva("aparece diante dele.\n")
	    u.aguarde(time)
	    
	    escreva("\nHomem Estranho: 'Você fez um ótimo trabalho, Mortimer Grover, mas a")
	    escreva("verdadeira natureza do seu destino ainda precisa ser revelada.'\n")
	    u.aguarde(time)
	    
	    escreva("\nMortimer observa perplexo enquanto o Homem Estranho se transforma,")
	    escreva("revelando uma figura assustadora e sombria.\n")
	    u.aguarde(time)
	    
	    escreva("\nHomem Estranho (voz sombria): 'Eu sou a Morte, aquele que controla a vida")
	    escreva("e a morte. Você pensou que poderia escapar da sua sina?'\n")
	    u.aguarde(time)
	    
	    escreva("\nMortimer tenta reagir, mas antes que possa fazer qualquer coisa, a Morte")
	    escreva("estende a mão em sua direção e a vida de Mortimer se esvai.\n")
	    u.aguarde(time)
	    
	    escreva("\nO sol se põe sobre o Oeste Selvagem, e Mortimer cai no chão, sem vida.")
	    escreva("Sua jornada sangrenta e desafiadora chega a um fim abrupto e sombrio.\n")
	    u.aguarde(time)
	    
	    escreva("\nFim do Jogo.")
	    escreva("\n------------------------------\n")
	    escreva("\nEnter...")
	    leia(Enter)
	   
	}
     
}
